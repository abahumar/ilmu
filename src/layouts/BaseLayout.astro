---
interface Props {
  title?: string;
  description?: string;
}

import '../styles/global.css';

const {
  title = 'ilmu.my | Video Ilmu Islam',
  description = 'ilmu.my ialah platform video ilmu Islam berasaskan kandungan YouTube terpilih untuk tontonan mudah dan tersusun.'
} = Astro.props;
---

<!doctype html>
<html lang="ms">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://ilmu.my/og-image.png" />
    <meta property="og:url" content={Astro.url.href} />
    <meta property="og:site_name" content="ilmu.my" />
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="https://ilmu.my/og-image.png" />
    <!-- Google tag (gtag.js) -->
    <script is:inline async src="https://www.googletagmanager.com/gtag/js?id=G-8LWQELWCT0"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-8LWQELWCT0');
    </script>
  </head>
  <body>
    <header class="site-header">
      <div class="container nav-wrap">
        <a href="/" class="brand">ilmu.my</a>
        <nav class="nav-links">
          <a href="/">Utama</a>
          <a href="/carian">Carian</a>
          <a href="/lapor">Lapor</a>
        </nav>
      </div>
    </header>

    <main class="container">
      <slot />
    </main>

    <footer class="site-footer">
      <div class="container footer-links">
        <a href="/terma">Terma Penggunaan</a>
        <a href="/privasi">Dasar Privasi</a>
        <a href="/penafian">Penafian Kandungan</a>
      </div>
    </footer>
  </body>
</html>